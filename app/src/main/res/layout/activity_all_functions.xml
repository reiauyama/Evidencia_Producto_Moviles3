<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.AllFunctions">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnIrVoidFissures"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:text="Void Fissures"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIrrDroptable"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:text="Tabla de drops"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/WorldState"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Estado del mundo"
            android:textSize="16sp" />

        <Button
            android:id="@+id/IrNews"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Noticias"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Activities"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Actividades"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIrVoidTrader"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Baro Ki'teer"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIrNightWave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Onda Nocturna"
            android:textSize="16sp" />

        <Button
            android:id="@+id/incurtions"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:textColor="@color/white"
            android:text="Incursiones"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Syndicates"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:text="Sindicatos"
            android:textSize="16sp" />

        <Button
            android:id="@+id/backToHome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F1C1C"
            android:text="volver"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>